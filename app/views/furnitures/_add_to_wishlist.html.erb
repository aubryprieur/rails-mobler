<div class="modal fade" id="modal<%= furniture.id %>" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Choisir une wishlist pour " <%= furniture.title %> "</h4>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body margin-top-1x">
        <div class="row">
          <div class="col-sm-6 margin-bottom-1x">
            <nav class="list-group">
              <%= image_tag furniture.photo, class: "d-block mx-auto img-thumbnail mb-3" %>
            </nav>
          </div>
          <div class="col-sm-6 margin-bottom-1x">
            <nav class="list-group">
              <% current_user.wishlists.each do |wishlist| %>
                <div class="list-group-item justify-content-between">
                  <%= wishlist.title %>
                  <span><%= link_to 'ajouter', wishlist_add_item_path(wishlist_id: wishlist.id, furniture_id: furniture.id), class: 'btn btn-sm btn-outline-primary', method: :post %></span>
                </div>
              <% end %>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
