<div class="page-title">
  <div class="container">
    <div class="form-inputs" id="form">
      <%= simple_form_for @search, method: :get, url: furnitures_path do |f| %>
        <div class="row">
          <div class="col-md-3">
            <div class="form-group text-center">
              <%= f.input :length, as: :slider, min: 0, max: 400, range: true %>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group text-center">
              <%= f.input :width, as: :slider, min: 0, max: 400, range: true %>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group text-center">
              <%= f.input :height, as: :slider, min: 0, max: 400, range: true %>
            </div>
          </div>
          <div class="col-md-2">
            <%= f.input :category, required: false, label: false, collection: @categories, class: 'form-control' %>
          </div>
          <div class="col-md-1">
            <%= f.submit 'GO', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container padding-bottom-2x">
  <div class="margin-bottom-2x margin-top-2x">
    <div class="entry-navigation">
      <div class="column text-left">
        <%= link_to_prev_page @furnitures, 'Previous Page', class: 'btn btn-outline-secondary btn-sm' %>
      </div>
      <div class="column text-center">
        <p> Mobler found <strong><%= @furnitures.total_count %> furnitures</strong> for you.</p>      </div>
      <div class="column text-right">
      <%= link_to_next_page @furnitures, 'Next Page', class: 'btn btn-outline-secondary btn-sm' %>
      </div>
    </div>
  </div>
  <div class="row">
      <% @furnitures.each do |furniture| %>
      <%= render 'card', furniture: furniture %>
      <% end %>
  </div>
  <div class="margin-bottom-2x margin-top-2x">
    <div class="entry-navigation">
      <div class="column text-left">
        <%= link_to_prev_page @furnitures, 'Previous Page', class: 'btn btn-outline-secondary btn-sm' %>
      </div>
      <div class="column text-center">
        <p> Mobler found <strong><%= @furnitures.total_count %> furnitures</strong> for you.</p>      </div>
      <div class="column text-right">
      <%= link_to_next_page @furnitures, 'Next Page', class: 'btn btn-outline-secondary btn-sm' %>
      </div>
    </div>
  </div>
</div>
