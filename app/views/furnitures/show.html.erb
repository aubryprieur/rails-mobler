<div class="page-title">
  <div class="container">
    <div class="column">
      <%= link_to "All results", furnitures_path, class: "btn btn-sm btn-secondary" %>
    </div>
    <div class="column">
    </div>
  </div>
</div>

<div class="container padding-bottom-3x mb-1">
  <div class="row">

    <!-- PRODUCT GALLERIE  -->
    <div class="col-md-6">
      <div class="product-card">
        <%= image_tag @furniture.photo, class: "img-total-width" %>
      </div>
    </div>

    <!-- PRODUCT DESCRIPTION -->

    <div class="col-md-6 padding-left-1x padding-top-2x">
      <div class="padding-top-2x mt-2 hidden-md-up"></div>
        <div class="row justify-content-between ">
          <div class="column">
            <h2 class="text-normal padding-left-title"><%= @furniture.title %></h2>
          </div>
          <div class="column text-right padding-left-title">
            <span class="h2 d-block"><%= @furniture.price.to_s.gsub(".0", "").gsub(".", ",") %> € </span>
          </div>
        </div>
      <hr class="mb-3">
      <p><%= @furniture.description %></p>
      <br>
      <div class=" mb-2 widget widget-tags">
        <span class="text-medium">Categories:&nbsp;</span>
        <a class="tag" href="#"> <%= @furniture.category.name %></a>
      </div>
      <div class=" mb-2 widget widget-tags justify-content-between">
        <span class="text-medium">Size:</span>
        <a class="tag" href="#">Lenght: <%= @furniture.length %> cm</a>
        <a class="tag" href="#">Width: <%= @furniture.width %> cm</a>
        <a class="tag" href="#">Heigth: <%= @furniture.height %> cm</a>
      </div>
      <hr class="mb-3">
      <div class="d-flex flex-wrap justify-content-between">
        <div class="entry-share mt-2 mb-2">
          <span class="text-muted">Share:</span>
          <div class="share-links">
            <a class="social-button shape-circle sb-facebook" href="#" data-toggle="tooltip" data-placement="top" title="Facebook"><i class="socicon-facebook"></i></a>
            <a class="social-button shape-circle sb-twitter" href="#" data-toggle="tooltip" data-placement="top" title="Twitter"><i class="socicon-twitter"></i></a>
            <a class="social-button shape-circle sb-instagram" href="#" data-toggle="tooltip" data-placement="top" title="Instagram"><i class="socicon-instagram"></i></a>
            <a class="social-button shape-circle sb-google-plus" href="#" data-toggle="tooltip" data-placement="top" title="Google +"><i class="socicon-googleplus"></i></a>
          </div>
        </div>
        <div class="sp-buttons mt-2 mb-2">
          <% if user_signed_in? %>
            <button class="btn btn-outline-danger btn-sm " data-toggle="modal" data-target="#modal<%=@furniture.id%>" title="Whishlist"><i class="icon-heart"></i></button>
            <% content_for :modals do %>
              <%= render 'add_to_wishlist', furniture: @furniture %>
            <% end %>
          <% else %>
            <a href="<%= new_user_session_path%>" class="btn btn-outline-secondary btn-sm btn-wishlist"><i class="icon-heart"></i></a>
          <% end %>
          <%= link_to "Buy", @furniture.url, target: "_blank", class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row padding-top-3x mb-3">
    <div class="col-lg-12">
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" href="#description" data-toggle="tab" role="tab">Description</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#reviews" data-toggle="tab" role="tab">Reviews (3)</a>
        </li>
      </ul>
      <div class="tab-content">
