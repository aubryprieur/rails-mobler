
  <div class="form-inputs" id="form">
    <%= simple_form_for :search, method: :get, url: furnitures_path do |f| %>
      <%= f.input :category, collection: @categories, class: 'form-control' %>
      <%= f.input :min_length, class: "form-control", id: "min_length"%>
      <%= f.input :max_length, class: "form-control", id: "max_length" %>
      <%= f.input :min_width, class: "form-control", id: "min_width" %>
      <%= f.input :max_width, class: "form-control", id: "max_width" %>
      <%= f.input :min_height, class: "form-control", id: "min_height" %>
      <%= f.input :max_height, class: "form-control", id: "max_height" %>
      <%= f.submit 'Rechercher', class: 'btn btn-primary scale-up delay-1' %>
    <% end %>
  </div>

