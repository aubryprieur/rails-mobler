<div class="modal fade" id="modal<%= @wishlist.id %>" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Add collaborator to</h4>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body margin-top-1x">
        <div class="row">
          <div class="col-md-4 text-left">
            <h4>Users :</h4>
            <% @wishlist.guest_wishlists.each do |guest| %>
              <%= guest.email %>
            <% end %>
          </div>
          <div class="col-md-8 text-right">
            <div class="form-inline">
              <%= form_for [@wishlist, GuestWishlist.new], :html => {class: 'form-inline'} do |f| %>
              <div class="input-group">
                <div class="input-group-addon">@</div>
                <%= f.text_field :email, required: true, class: "form-control", placeholder: "Email" %>
              </div>
              <div>
                <%= f.submit "Invite", class: "btn btn-primary" %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
