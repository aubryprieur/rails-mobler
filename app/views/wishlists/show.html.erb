<div class="page-title">
  <div class="container">
    <div class="row">
      <div class="col-md-6 text-left">
        <%= link_to profile_path, class: 'btn btn-sm btn-outline-primary' do %>
        <i class="icon-arrow-left"></i> <%= "All wishlists" %>
        <% end %>
        <%= link_to furnitures_path, class: 'btn btn-sm btn-outline-secondary' do %>
        <i class="icon-search"></i> <%= "new search" %>
        <% end %>
      </div>
      <div class="col-md-6 text-right">
        <%= link_to "Delete this wishlist!", wishlist_path(@wishlist), :method => 'delete', class: "btn btn-link-secondary" %>
        <%= link_to "Edit", wishlist_path(@wishlist), class: "btn btn-sm btn-secondary" %>
        <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#modal<%= @wishlist.id %>%>
        " title="Whishlist"> Add collaborators</button>
        <% content_for :modals do %>
        <%= render 'add_collaborators', wishlist: @wishlist %>
        <% end %>
      </div>
    </div>
    <hr class="margin-bottom-2x margin-top-1x">
    <div class="row">
      <div class="col-md-5 text-left">
        <h1><strong><%= @wishlist.title %></strong></h1>
        <br>
        <p> You have <strong><%= @wishlist.furnitures.count %> furnitures</strong> in this wishlist</p>
        <div>
          <%= form_tag url_for(:controller => 'donations', :action => 'create') do %>
          <div id="error_explanation">
            <% if flash[:error].present? %>
            <p><%= flash[:error] %></p>
            <% end %>
          </div>
          <article>
            <%= label_tag(:amount, 'Donation Amount:') %>
            <%= text_field_tag(:amount) %>
          </article>
          <article>
            <%= hidden_field_tag 'wishlist_id', @wishlist.id %>
          </article>
          <%= submit_tag 'Donation', class: 'btn btn-primary' %>
          <% end %>
        </div>
        <div>


          <h4>Donation</h4>

          TOTAL: <strong><%= @wishlist.donations.sum("amount_cents")/100 %>€</strong>
          <ul class="list-unstyled">
            <% @wishlist.donations.each do |donation| %>

            <li><%= User.find(donation.user_id).last_name unless donation.user_id.nil? %><%= User.find(donation.user_id).first_name unless donation.user_id.nil? %> : <%= donation.amount %> </li>
            <% end %>
          </ul>

        </div>
      </div>
      <div class="col-md-7 text-right">
        <p class=""><strong> Description: </strong><%= @wishlist.description %></p>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-between">
    <div class="col-md-8">
      <div class="form-inline">
        <%= form_for [@wishlist, GuestWishlist.new], :html => {class: 'form-inline'} do |f| %>
        <div class="input-group">
          <div class="input-group-addon">@</div>
          <%= f.text_field :email, required: true, class: "form-control", placeholder: "Email" %>
        </div>
        <div>
          <%= f.submit "Invite", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
      <div class="col-4">
        <h4></h4>
        <% @wishlist.guest_wishlists.each do |guest| %>
        <%= guest.email %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <hr class="margin-bottom-1x margin-top-1x">
  <div class="row">
    <% @furnitures.each do |furniture| %>
    <div class="col-xs-12 col-sm-4">
      <div class="product-card text-center">
        <%= image_tag furniture.photo, class: "product-thumb" %>
        <h2 class="product-title"><%= furniture.title %> - <strong><%= humanized_money(furniture.price) %> € </strong></h2>
        <p class="tag text-center">L: <strong><%= furniture.length %></strong>cm - W: <strong><%= furniture.width %></strong>cm - H: <strong><%= furniture.height %>cm</strong></p>
        <div class="product-buttons">
          <%= link_to "Buy", furniture.url, target: "_blank", class: "btn btn-outline-primary btn-sm" %>
          <%= link_to "View product", furniture_path, target: "_blank", class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="container margin-bottom-2x">
  <hr class="margin-bottom-1x margin-top-1x">
  <div class="row">
    <% @furnitures.each do |furniture| %>
    <div class="col-md-4 margin-bottom-1x pb-2">
      <div class="card"><img class="card-img-top" src="<%= furniture.photo %>" alt="Card image">
        <div class="card-block">
          <h4 class="card-title"> <%= furniture.title %></h4>
          <p class="card-text">
            <strong>L:</strong><%= furniture.length %> cm <strong>H:</strong> <%= furniture.height %> cm <strong>W:</strong> <%= furniture.width %> cm
          </p>
          <div class="row">
            <%= link_to "Delete", furniture_path(furniture), :method => 'delete', class: "btn btn-secondary btn-sm" %>
            <div>
              <button class="btn btn-secondary btn-sm" data-toggle="modal" data-target="#modaldefault<%=furniture.id%>" title="Whishlist">Comment</button>
              <% f_w = FurnituresWishlist.where(wishlist: @wishlist).where(furniture: furniture).first.id %>
              <% content_for :modals do %>
              <%= render 'comment', f_w_id: f_w, review: Review.new , furniture: furniture%>
              <% end %>
            </div>
            <div>
              <button class="btn btn-secondary btn-sm" data-toggle="modal" data-target="#modalLarge<%=furniture.id%>" title="Whishlist">Reviews</button>
              <% content_for :modals do %>
              <%= render 'reviews', reviews: furniture.furnitures_wishlists.where(wishlist: @wishlist).first.reviews, furniture: furniture %>
              <% end %>
            </div>
          </div>
          <div class="text-center">
            <%= link_to "Buy", furniture.url, target: "_blank", class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
