<div class="modal fade" id="modaldefault" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
  <form>
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Insert comment to your furniture</h4>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <p> Please type your comment ...</p>
        <textarea name="comment" id="comment" rows="4" cols="68"></textarea>
      </div>
      <div class="modal-footer">
        <button class="btn btn-outline-secondary btn-sm" type="button" data-dismiss="modal">Close</button>
        <button class="btn btn-primary btn-sm" type="submit">Save comment</button>
      </div>
    </div>
    </form>
  </div>
</div>

